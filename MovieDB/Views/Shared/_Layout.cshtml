<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Database</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Movies" asp-action="Index">
                    ðŸŽ¬ Movie Database
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Index">Now Playing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Popular">Popular</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Upcoming">Upcoming Movies</a>
                        </li>
                    </ul>
                    <form class="d-flex" asp-controller="Movies" asp-action="Search" method="get">
                        <input class="form-control me-2"
                               type="search"
                               name="query"
                               placeholder="Search movies..."
                               aria-label="Search"
                               required>
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <!-- About Section -->
                <div class="col-12 col-md-4 mb-4">
                    <h5 class="mb-3">ðŸŽ¬ Movie Database</h5>
                    <p class="text-muted">
                        Your ultimate destination for discovering movies, checking what's playing, and staying updated with the latest releases.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-6 col-md-4 mb-4">
                    <h5 class="mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a class="text-muted text-decoration-none" asp-controller="Movies" asp-action="Index">Now Playing</a>
                        </li>
                        <li class="mb-2">
                            <a class="text-muted text-decoration-none" asp-controller="Movies" asp-action="Popular">Popular Movies</a>
                        </li>
                        <li class="mb-2">
                            <a class="text-muted text-decoration-none" asp-controller="Movies" asp-action="Upcoming">Upcoming Releases</a>
                        </li>
                    </ul>
                </div>

                <!-- Powered By Section -->
                <div class="col-6 col-md-4 mb-4">
                    <h5 class="mb-3">Powered By</h5>
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://www.themoviedb.org/assets/2/v4/logos/v2/blue_square_2-d537fb228cf3ded904ef09b136fe3fec72548ebc1fea3fbbd1ad9e36364db38b.svg"
                             alt="TMDB Logo"
                             style="height: 40px;"
                             class="me-2">
                    </div>
                    <p class="text-muted small">
                        This product uses the TMDB API but is not endorsed or certified by TMDB.
                    </p>
                </div>
            </div>

            <!-- Copyright Bar -->
            <div class="row mt-4 pt-4 border-top border-secondary">
                <div class="col-12 text-center text-muted">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <span>
                            &copy; @DateTime.Now.Year Movie Database. All rights reserved. Created by
                            <a href="https://www.linkedin.com/in/louis-chavez87"
                               class="text-muted text-decoration-none"
                               target="_blank"
                               rel="noopener noreferrer">
                                Louis Chavez
                            </a>
                        </span>
                        <div>
                            <a href="#" class="text-muted text-decoration-none me-3">Privacy Policy</a>
                            <a href="#" class="text-muted text-decoration-none">Terms of Service</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
