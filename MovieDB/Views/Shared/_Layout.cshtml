<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Database</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Movies" asp-action="Index">
                    🎬 Movie Database
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Index">Now Playing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Popular">Popular</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Upcoming">Upcoming Movies</a>
                        </li>
                    </ul>
                    <form class="d-flex" asp-controller="Movies" asp-action="Search" method="get">
                        <input class="form-control me-2"
                               type="search"
                               name="query"
                               placeholder="Search movies..."
                               aria-label="Search"
                               required>
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Movie Database
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>